<div class="col s12">
  <div class="card profile-skills">
    <div class="title">
      <h5><i class="fa fa-bookmark"></i>Reviews</h5>
    </div>
    <div class="content">
      <ul class="collection clear-b">
        <li class="collection-item avatar" dir-paginate="report in reports | itemsPerPage: 8" pagination-id="review">
          <img src="https://s3-us-west-2.amazonaws.com/dynamicowlwendy/profileicon/{{report.player.icon}}.png" class="circle"></i>
          <a ng-href="/players/{{report.player.id}}"><span ng-bind="report.player.display_name"></span></a>
          <div>
            <span ng-bind="report.report.created_at | date: 'MM/dd/yy'"></span> <br>
            <span><i class="fa" ng-class="report.report.rating < 1 ? 'fa-star-o' : 'fa-star'"></i></span>
            <span><i class="fa" ng-class="report.report.rating < 2 ? 'fa-star-o' : 'fa-star'"></i></span>
            <span><i class="fa" ng-class="report.report.rating < 3 ? 'fa-star-o' : 'fa-star'"></i></span>
            <span><i class="fa" ng-class="report.report.rating < 4 ? 'fa-star-o' : 'fa-star'"></i></span>
            <span><i class="fa" ng-class="report.report.rating < 5 ? 'fa-star-o' : 'fa-star'"></i></span>
            <br>
            <span ng-bind="report.report.message"></span> <br>
            <div class="clear-b"></div>
            <span class="action-button" ng-cloak>
              <span class="right">
                <a data-toggle="modal" data-target="#delete-review-modal" ng-click="setDeletedReview(report, report.report)"><i class="fa fa-trash review-action-icon"></i></a>
                <a data-toggle="modal" data-target="#edit-review-modal" ng-click="setEditedReview(report.report)"><i class="fa fa-pencil review-action-icon"></i></a>
              </span>
            </span>
          </div>
          <dir-pagination-controls pagination-id="review"></dir-pagination-controls>
        </li>
      </ul>
    </div>
  </div>
</div>

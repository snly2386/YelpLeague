<section class="content-wrap" ng-controller="UsersCtrl">
  <div class="hidden" id="avatar"><%=@user.avatar%></div>
  <div class="hidden" id="user-id"><%=@user.id%></div>
  <!-- Breadcrumb -->
  <div class="page-title">
    <div class="row">
      <div class="col s12 m9 l10">
        <h1>Profile</h1>
        <ul>
          <li><span ng-bind="user.username"></span> </li> |
          <li><span ng-bind="user.email || 'none'"></span></li> |
          <li><span ng-bind-template="Member since {{user.created_at | date:'MM/dd/yyyy'}}"></span></li>
        </ul>
      </div>
      <div class="col s12 m3 l2 right-align"><a href="#!" class="btn grey lighten-3 grey-text z-depth-0 chat-toggle"><i class="fa fa-comments"></i></a></div>
    </div>
  </div>
  <user-dashboard></user-dashboard>
  <div class="row">
    <div class="col s12 l6">
      <div class="card">
        <div class="title">
          <h5><i class="fa fa-user"></i>Social Accounts</h5>
          <a class="close" href="#"><i class="mdi-content-clear"></i></a> <a class="minimize" href="#"><i class="mdi-navigation-expand-less"></i></a>
        </div>
        <div class="content" style="max-height: 310px; overflow: auto">
          <a class="btn modal-trigger right" href="#social-oauth-modal" ng-show="providers.length < 2">Add Account</a>
          <ul class="collection clear-b">
            <li class="collection-item avatar" ng-repeat="provider in user.providers">
              <i class="fa fa-{{provider.name}} circle {{provider.name}}-background"></i>
              <span class="title" ng-bind="provider.name"></span>
              <div>
                <span ng-bind="provider.username || provider.email"></span> <br>
                <span ng-bind-template="Last Login: {{user.last_sign_in_at | date: 'MM/dd/yyyy'}}"></span>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <user-bookmarks></user-bookmarks>
    <user-reviews></user-reviews>
  </div>
  <%= render "avatar_modal" %>
  <%= render "social_oauth_modal" %>
  <%= render "edit_review_modal" %>
  <%= render "delete_review_modal" %>
</section>

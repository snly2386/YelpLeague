
<div id="avatar-modal" class="modal modal-fixed-footer">
  <div class="modal-content flow-text">
    <h4>Select Avatar</h4>
    <div class="modal-body">
      <ul class="tabs">
        <li class="tab"><a href="#championAvatars" class="active">Champions</a></li>
        <li class="tab"><a href="#socialAvatars">Social Profile</a></li>
      </ul>

        <div id="championAvatars">
          <div class="input-field">
            <input ng-model="avatarSearch.name" ng-change="refreshImage()"  placeholder="Champion Name" class="validate">
          </div>
          <div class="row">
            <div class="col s6 m3 avatar-wrap" ng-repeat="avatar in avatars | filter:avatarSearch" afkl-lazy-image=="{{avatar.image}}">
              <img src="{{avatar.image}}" ng-class="{'active-border' : activeAvatar == avatar.image}" ng-click="setActiveAvatar(avatar.image)"/>
            </div>
          </div>
        </div>


        <div id="socialAvatars">
          <div class="col m-12">
            <div class="col s6 m3 avatar-wrap" ng-repeat="avatar in providerAvatars" afkl-lazy-image=="{{avatar.image}}">
              <img src="{{avatar.image}}" ng-class="{'active-border' : activeAvatar == avatar.image}" ng-click="setActiveAvatar(avatar.image)"/>
            </div>
          </div>
        </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat ">Disagree</a>
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat " ng-click="setAvatar()">Agree</a>
  </div>
</div>

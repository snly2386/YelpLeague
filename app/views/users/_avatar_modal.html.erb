
<div id="avatar-modal" class="modal">
  <div class="modal-content flow-text">
    <h4>Select Avatar</h4>
    <div class="modal-body">
      <div id="championAvatars">
        <div class="input-field">
          <input ng-model="avatarSearch.name" ng-change="refreshImage()"  placeholder="Champion Name" class="validate">
        </div>
        <div class="row">
          <div class="col s6 m3 avatar-wrap" ng-repeat="avatar in avatars | filter:avatarSearch" afkl-lazy-image=="{{avatar.image}}">
            <img src="{{avatar.image}}" ng-class=" activeAvatar == avatar.image ? 'active-avatar' : 'inactive-avatar'" ng-click="setActiveAvatar(avatar.image)"/>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat btn btn-default">Cancel</a>
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat btn btn-default m-r-10" ng-click="setAvatar()">Save</a>
  </div>
</div>

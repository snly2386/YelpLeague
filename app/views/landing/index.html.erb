<section ng-controller="HomeCtrl">
<% if @player.errors.any? %>
  <%= @player.errors.full_messages %>
<% end %>
<!-- <div id="page" class="hfeed site"> -->

<div id="content" class="site-content">
    <div style="background-image: url(https://s3-us-west-2.amazonaws.com/dynamicowlwendy/summoners_rift.jpg);" class="homepage-cover page-cover entry-cover has-image">
        <div class="cover-wrapper container">
            <div class="listify_widget_search_listings">
                <div class="home-widget-section-title">
                    <h1 class="home-widget-title">Search for Summoner<h2 class="home-widget-description">

Help inform and improve the community.</h2></h1>
                </div>
                <a href="#" data-toggle=".job_filters" class="js-toggle-area-trigger">Toggle Filters</a>

                <%= form_for @player, class: 'job_search_form' do |f| %>

                    <div class="search_jobs">

                        <div class="search_keywords">
                            <%= f.label :name %>
                            <%= f.text_field :name, placeholder: 'Summoner Name', class: 'name-input' %>
                        </div>

                        <div class="search_categories">
                             <%= f.label :region %>
                             <%= f.select :region, options_for_select(regions), :include_blank => "Select Region" %>
                        </div>


                        <div class="search-radius-wrapper in-use">
                            <div class="search-radius-label">
                                <label for="use_search_radius">
                            </div>
                            <div class="search-radius-slider">
                                <div id="search-radius"></div>
                            </div>

                        </div>

                        <div class="filter_wide filter_by_tag">Filter by tag: <span class="filter_by_tag_cloud"></span>
                        </div>
                        </div>

                    <p class="filter-by-type-label">Filter by type:</p>
                    <ul class="job_types">
                    </ul>
                    <%=f.button 'Search Player', class: "update_results"%>
                    <% end %>
                    <div class="showing_jobs"></div>
                </form>

                <div class="archive-job_listing-filter-title">
                    <div class="archive-job_listing-layout-wrapper">

                        <a href="#" data-style="grid" class="archive-job_listing-layout button active"><span class="ion-grid"></span></a>
                        <a href="#" data-style="list" class="archive-job_listing-layout button"><span class="ion-navicon-round"></span></a>

                    </div>

                    <h3 class="archive-job_listing-found">
            <span class="results-found">0</span> Results Found            </h3>
                </div>


            </div>
        </div>

        <div style="width: 750px; " class="wp-video">
            <video class="wp-video-shortcode" id="video-6-1" width="750" height="422" loop="1" autoplay="1" preload="auto" controls="controls">
                <source type="" src="https://player.vimeo.com/external/118518515.hd.mp4?s=e0741e40d2d8b5f1f1d12a2bcb0cedce&#038;_=1" />
                <source type="video/webm" src="https://f6ca679df901af69ace6-d3d26a34307edc4f7eeb40d85a64c4a7.ssl.cf5.rackcdn.com/listify-loops-new.webm?_=1" />
            </video>
        </div>
        <p>Listify helps you find out whats happening in your city, Let&#8217;s explore.</p>
    </div>




    <div class="container homepage-hero-style-video">
        <aside id="listify_widget_recent_listings-3" class="home-widget listify_widget_recent_listings">
            <div class="home-widget-section-title">
                <h2 class="home-widget-title">Recent Listings<h2 class="home-widget-description">Discover Latest Player Listings</h2></h2>
            </div>
            <ul class="job_listings">


                <li id="job_listing-685" class="job_listing post-685 type-job_listing status-publish has-post-thumbnail hentry job_listing_region-toronto job_listing_category-barbershop job_listing_tag-accepts-credit-cards job_listing_tag-good-for-kids job_listing_tag-wheelchair-accessible job_listing_tag-wifi claimed col-xs-12 col-sm-6 col-md-4 style-grid" data-grid-columns="col-xs-12 col-sm-6 col-md-4" ng-repeat="player in players" >

                    <div class="content-box">

                        <header class="job_listing-entry-header listing-cover has-image">
                            <div class="home-player-listing-container">
                              <img src="https://s3-us-west-2.amazonaws.com/dynamicowlwendy/profileicon/{{player.player.icon}}.png" class="home-player-listing center-block" />
                            </div>
                            <div class="job_listing-entry-header-wrapper cover-wrapper">

                                <div class="job_listing-entry-thumbnail">
                                    <div style="background-image: url(https://demo.astoundify.com/listify/wp-content/uploads/sites/39/job_listings/2014/11/Stocksy_txp782c31421CE000_Medium_85879-1024x682.jpg);" class="list-cover has-image"></div>
                                </div>
                                <div class="job_listing-entry-meta">
                                    <a ng-href="/players/{{player.player.id}}">
                                      <h1 itemprop="name" class="job_listing-title" ng-bind="player.player.display_name"></h1>
                                    </a>
                                    <div class="job_listing-location job_listing-location-formatted">
                                      Region: <span ng-bind="player.player.region"></span>
                                      <br/>
                                      Summoner Level: <span ng-bind="player.player.level"></span>
                                    </div>
                                </div>

                            </div>

                        </header>
                        <!-- .entry-header -->

                        <footer class="job_listing-entry-footer">

                            <div itemprop="aggregateRating" class="rating-4 job_listing-rating-wrapper" title="4 Reviews">
                                <span class="job_listing-rating-stars">

                                  <span class='stars-rating'>

                                    <span style="color:#77c04b"><i class="fa" ng-class="player.average_rating < 1 ? 'fa-star-o' : 'fa-star'"></i></span>

                                    <span style="color:#77c04b"><i class="fa" ng-class="player.average_rating < 2 ? 'fa-star-o' : 'fa-star'"></i></span>



                                    <span style="color:#77c04b"><i class="fa" ng-class="player.average_rating < 3 ? 'fa-star-o' : 'fa-star'"></i></span>



                                    <span style="color:#77c04b"><i class="fa" ng-class="player.average_rating < 4 ? 'fa-star-o' : 'fa-star'"></i></span>



                                    <span style="color:#77c04b"><i class="fa" ng-class="player.average_rating < 5 ? 'fa-star-o' : 'fa-star'"></i></span>


                                </span>
                                </span>

                                <span class="job_listing-rating-average">
                                  <span ng-bind="player.average_rating || 'n/a' "></span>
                                </span>
                                <span class="job_listing-rating-count">
    <span itemprop="reviewCount">4</span> Reviews </span>
                            </div>

                            <i class="fa bookmark-icon" ng-class="{ 'fa-bookmark' : player.bookmarked, 'fa-heart-o' : !player.bookmarked }" ng-click="player.bookmarked ? unbookmarkPlayer(player.player.id, $index) : bookmarkPlayer(player.player.id, $index)"></i>
                        </footer>
                        <!-- .entry-footer -->

                    </div>
                </li>
                <!-- #post-## -->
            </ul>

        </aside>
    </div>

    <aside id="listify_widget_feature_callout-4" class="home-widget listify_widget_feature_callout">
        <div class="feature-callout text-left image-pull" style="background-color: #ffffff;">





        </div>
        <!-- #content -->






            <!-- #colophon -->

        <!-- </div> -->


</section>

<div id="ajax-response"></div>
<%= javascript_include_tag 'home' %>

<div ng-controller="PlayersCtrl">
  <h1>Player Show Page</h1>
  <h2><%=@player.inspect%></h2>
  <div id="player-id" class="hidden"><%=@player.id%></div>
  <div id="user-id" class="hidden"><%=@user.try(:id)%></div>

  <div class="col-md-6">
    <form>
      <textarea ng-model="report.message"></textarea>
      <select ng-model="report.rating" ng-options="rating for rating in ratingOptions">
        <option disabled selected value="">Rating</option>
      </select>
      <br>
      <button ng-click="submitReport()">SUBMIT THIS SHIT</button>
    </form>
  </div>
  <div class="col-md-12">
    <div class="col-md-6" ng-repeat="report in reports">
      <span ng-bind="report.rating"></span>
      <h1 ng-bind="report.message"></h1>
      <span ng-bind="report.created_at | timeAgo"></span>
      <div class="col-md-6">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" ng-click="initializeUpdateReport(report, $index)" >Edit</button>
      </div>
    </div>

  </div>
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <input ng-model="updateReport.message"></input>
        </div>
        <div class="modal-footer">
          <button        ng-click="editReport()">EDIT</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'sign out', destroy_user_session_path, method: 'delete' %>

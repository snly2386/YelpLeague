
  <div class="popup  popup-wide"><h2 class="popup-title">My Account</h2>


  <article id="post-4479" class="post-4479 page type-page status-publish has-post-thumbnail hentry not-claimed content-box content-box-wrapper">

    <div class="content-box-inner">

            <div class="entry-content">
          <div class="woocommerce">

      <h2>Login</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: 'login col-md-6'}) do |f| %>
        <p class="form-row form-row-wide">
          <label for="email">Email Address <span class="required">*</span></label>
          <%= f.email_field :email, autofocus: true, class: "input-text" %>
        </p>
        <p class="form-row form-row-wide">
          <label for="password">Password <span class="required">*</span></label>
           <%= f.password_field :password, autocomplete: "off", class: 'input-text' %>
        </p>


        <p class="form-row">
          <%=f.submit 'login', class: 'button'%>

        </p>
        <p class="lost_password">
        <%= render "devise/shared/links" %>
        </p>
      <% end %>

      <p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


  <div class="wc-social-login form-row-wide col-md-6">

      <p>For fast login or registration use your social account.</p>

        <%=link_to user_omniauth_authorize_path(:facebook), class: 'social-icon-link' do %>
          <i class="fa fa-facebook"></i>
        <% end %>

        <%=link_to user_omniauth_authorize_path(:twitter), class: 'social-icon-link' do %>
          <i class="fa fa-twitter"></i>
        <% end %>

    </div></div>
        </div>


        </div>

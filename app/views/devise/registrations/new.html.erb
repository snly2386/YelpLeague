<section id="sign-up">
  <% if devise_error_messages! %>
    <div class="alert alert-border-left" style="margin-top: -80px">
      <%=devise_error_messages!%>
    </div>
  <% end %>
  <!-- Background Bubbles -->
  <canvas id="bubble-canvas" width="1179" height="283" style="position: fixed; top: 0px; left: 0px; z-index: 1;"></canvas>
  <!-- /Background Bubbles -->
  <!-- Sign Up Form -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row links">
      <div class="col s6 logo">
        <%= image_tag 'ggreported_logo.png' %>
      </div>
      <div class="col s6 right-align">
        <%= link_to 'Sign In', new_user_session_path %> /
        <strong>Sign Up</strong>
      </div>
    </div>
    <div class="card-panel clearfix">
      <!-- Social Sign Up -->
      <div class="row socials">
        <div class="col s6">
          <%=link_to user_omniauth_authorize_path(:facebook), class: 'btn blue darken-2 z-depth-0 z-depth-1-hover' do %>
            <i class="fa fa-2x fa-facebook"></i>
          <% end %>
        </div>
        <div class="col s6">
          <%=link_to user_omniauth_authorize_path(:twitter), class: 'btn blue lighten-2 z-depth-0 z-depth-1-hover' do %>
            <i class="fa fa-2x fa-twitter"></i>
          <% end %>
        </div>
      </div>
      <!-- /Social Sign Up -->
      <div class="row">
        <div class="col">
        </div>
      </div>
      <!-- Email -->
      <div class="input-field">
        <i class="fa fa-envelope prefix"></i>
        <label for="input_email">Email Address</label>
        <%= f.email_field :email, class: "validate", id: "input_email" %>
      </div>
      <!-- /Email -->
      <!-- Username -->
      <div class="input-field">
        <i class="fa fa-user prefix"></i>
        <label for="input-username">Username</label>
        <%= f.text_field :username, class: "validate", id: "input-username" %>
      </div>
      <!-- /Username -->
      <!-- Password -->
      <div class="input-field">
        <i class="fa fa-unlock-alt prefix"></i>
        <label for="password-input">Password
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        </label>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: 'validate', id: 'password-input' %>
      </div>
      <!-- /Password -->
      <!-- Confirmation -->
      <div class="input-field">
        <i class="fa fa-unlock-alt prefix"></i>
        <label for="password-input">Password Confirmation
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </label>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'validate', id: 'password-input' %>
      </div>
      <!-- /Confirmation -->
      <!-- <div class="switch">
        <label>
          <input type="checkbox" checked="checked">
          <span class="lever"></span> Remember
        </label>
      </div> -->
      <button class="waves-effect waves-light btn-large z-depth-0 z-depth-1-hover"><%=f.submit 'Sign Up' %></button>
    </div>
    <div class="links right-align">
      <a href="page-forgot-password.html"><%= render "devise/shared/links" %></a>
    </div>
  </form>
  <% end %>
  <!-- /Sign In Form -->
</section>
